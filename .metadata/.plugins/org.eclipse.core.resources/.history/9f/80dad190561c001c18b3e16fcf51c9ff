package problems;
import java.util.*;

public class RPDandRapSheet {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scn=new Scanner(System.in);
		int t=scn.nextInt();
		
		while(t-->0) {
			int n=scn.nextInt();
			int k=scn.nextInt();
			System.out.println(0);
			System.out.flush();
			int r=scn.nextInt();
			
			if(r==1) return;
			
			int i=0;
			int j=0;
			
			while(true) {
				
				int guess = (i^j);
				
				System.out.println(guess);
				System.out.flush();
				r=scn.nextInt();
				
				if(r==1) return;
				
				i++;
				j++;
			}
		
		}

	}

}
